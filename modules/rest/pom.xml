    <groupId>se.kmr.scam</groupId>
    <artifactId>scam-rest-module</artifactId>
    <packaging>war</packaging>
    <version>4.0-SNAPSHOT</version>
    <name>SCAM REST module</name>
	
	<!-- ================= Properties ================= -->
	<properties>
      <clover.licenseLocation>${basedir}/../../src/resources/clover.license</clover.licenseLocation>
    </properties>
    
	<!-- ================= SCM ================= -->
	<scm>
       <connection>scm:svn:http://project.iml.umu.se/svn/scam/scam/trunk/modules/rest</connection>
       <developerConnection>scm:svn:http://project.iml.umu.se/svn/scam/scam/trunk/modules/rest</developerConnection>
       <url>http://project.iml.umu.se/projects/scam/browser/trunk/modules/rest</url>
    </scm>
    
    <!-- ================= Profiles ================= -->
 
    
	<!-- ================= Build ================= -->
	<build>
    	<resources>
    		<resource>
    			<directory>src/main/resources</directory>
    		</resource>
    	</resources>
    	<testResources>
    		<testResource>
    			<directory>src/test/resources</directory>
    			<includes>
    				<include>**/*.xml</include>
    				<include>**/*.properties</include>
    			</includes>
    		</testResource>
    	</testResources>
    	<plugins>
    	  	<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<id>make-a-jar</id>
						<phase>compile</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<excludes>
								<!-- not store scam.properties in generated jar only in war-->	
								<exclude>**/scam.properties</exclude>
							</excludes>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-install-plugin</artifactId>
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<packaging>jar</packaging>
							<artifactId>${project.artifactId}</artifactId>
							<groupId>${project.groupId}</groupId>
							<version>${project.version}</version>
							<file>${project.build.directory}/${project.artifactId}-${project.version}.jar</file>
						</configuration>
					</execution>
				</executions>
			</plugin>
    		<plugin>
    			<groupId>org.codehaus.cargo</groupId>
    			<artifactId>cargo-maven2-plugin</artifactId>
    			<version>1.0-beta-2</version>
    			<configuration>
    				<container>
    					<containerId>${cargo.deploy.container}</containerId>
    					<home>${cargo.deploy.container.home}</home>
	    				<type>installed</type>
					</container>
  					<configuration>
						<type>existing</type> 
						<home>${cargo.deploy.container.home}</home>
					</configuration>
					<wait>true</wait>
    			</configuration>
    		</plugin>
    	</plugins>
    </build>
    
	<!-- ================= Reporting ================= -->
	<reporting>
     	 <!-- Needed in order to generate the report properly -->
        <outputDirectory>
            ${basedir}/../../target/site/scam-modules/${project.artifactId}
        </outputDirectory>
    </reporting>
    
