    <!-- ================= Profiles ================= -->
 
    
	<!-- ================= Build ================= -->
    <build>
    	<testResources>
    		<testResource>
    			<directory>src/test/resources</directory>
    			<includes>
    				<include>**/*.xml</include>
    				<include>**/*.properties</include>
    			</includes>
    		</testResource>
    	</testResources>
    </build>
    
	<!-- ================= Reporting ================= -->
	<reporting>
