    <name>SCAM JDIL Module</name>
	
	<!-- ================= Properties ================= -->
	<properties>
      <clover.licenseLocation>${basedir}/../../../src/resources/clover.license</clover.licenseLocation>
    </properties>
    
	<!-- ================= SCM ================= -->
	<scm>
       <connection>scm:svn:http://project.iml.umu.se/svn/scam/scam/trunk/modules/format/jdil</connection>
